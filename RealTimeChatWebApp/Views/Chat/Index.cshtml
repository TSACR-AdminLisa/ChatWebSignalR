@model RealTimeChatWebApp.Models.UserChatModel   

@{
    ViewBag.Title = "Chat Servicio al Cliente BCCR";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h1 style="text-align: center;">Bienvenido - Servicio al Cliente</h1>*@

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

        <div id="loginContainer" style="border: 2px solid gray; border-radius: 15px; padding: 35px 35px 35px 35px; width: 85%; margin: 0 auto; margin-top: 35px;">
            @*<fieldset class="panel panel-body">*@
                @*<legend class="panel panel-heading" style="width: 100%;">Información de usuario</legend>*@
                <div class="display-label display-label-extension">
                    @Html.LabelFor(model => model._UserFullName, new { @class = "label-form" })
                </div>
                <div class="display-field display-field-extension" style="padding-bottom: 25px;">
                    @Html.TextBoxFor(model => model._UserFullName, new { @class = "textbox-input", @style = "width: 100%; max-width: 100%; height: 35px;" })
                    @Html.ValidationMessageFor(model => model._UserFullName, String.Empty, new { @style = "color: red; font-weight: bold; font-style: italic;" })
                </div>
                <div class="display-label display-label-extension">
                    @Html.LabelFor(model => model._UserEmail, new { @class = "label-form" })
                </div>
                <div class="display-field display-field-extension" style="padding-bottom: 25px;">
                    @Html.TextBoxFor(model => model._UserEmail, new { @class = "textbox-input", @style = "width: 100%; max-width: 100%; height: 35px;" })
                    @Html.ValidationMessageFor(model => model._UserEmail, String.Empty, new { @style = "color: red; font-weight: bold; font-style: italic;" })
                </div>
                <div class="display-label display-label-extension">
                    @Html.LabelFor(model => model._UserPhone, new { @class = "label-form" })
                </div>
                <div class="display-field display-field-extension" style="padding-bottom: 25px;">
                    @Html.TextBoxFor(model => model._UserPhone, new { @class = "textbox-input", @style = "width: 100%; max-width: 100%; height: 35px;", @maxlength = "9", placeholder = "####-####" })
                    @Html.ValidationMessageFor(model => model._UserPhone, String.Empty, new { @style = "color: red; font-weight: bold; font-style: italic;" })
                </div>
                <div class="display-label display-label-extension">
                    @Html.LabelFor(model => model._UserQuestion, new { @class = "label-form" })
                </div>
                <div class="display-field display-field-extension" style="padding-bottom: 25px;">
                    @Html.TextAreaFor(model => model._UserQuestion, new { @class = "textbox-input", @style = "width: 100%; max-width: 100%; height: 70px;" })
                    @Html.ValidationMessageFor(model => model._UserQuestion, String.Empty, new { @style = "color: red; font-weight: bold; font-style: italic;" })
                </div>
                <div style="text-align: right;">
                    <input type="submit" class="btn btn-primary" value="Ingresar al Chat" />
                </div>
            @*</fieldset>*@
        </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@*@RenderSection("scripts", required: false)*@

